{{#link-to 'post.new'}}<button class="ui blue button">Create new post</button>{{/link-to}}

{{#each model as |kitn|}}
  <div class="ui fluid card">
    <div class="image">
      <img src="img/{{kitn.image}}" alt="Kitten" />
    </div>
    <div class="content">
      <h2 class="header">{{kitn.image}}</h2>
      <div class="description">
        {{kitn.message}}
      </div>
      <div class="delete">
        <button class="ui red button" {{ action 'deletePost' kitn }} >delete</button>
      </div>
    </div>
  </div>
{{/each}}
